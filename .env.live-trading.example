# QUANTUM FORGEâ„¢ Live Trading Environment Variables
# Copy this file to .env.local and configure for live trading

# === EXISTING VARIABLES (keep these) ===
DATABASE_URL="postgresql://warehouse_user:quantum_forge_warehouse_2024@localhost:5433/signalcartel?schema=public"
NEXTAUTH_URL="http://localhost:3001"  
NEXTAUTH_SECRET="your-secret-here"
ENABLE_GPU_STRATEGIES=true
NTFY_TOPIC="signal-cartel"

# === NEW: LIVE TRADING CONFIGURATION ===

# Kraken API Configuration
KRAKEN_API_KEY="your-kraken-api-key-here"
KRAKEN_PRIVATE_KEY="your-kraken-private-key-base64-here"

# Live Trading Safety
LIVE_TRADING_ENABLED=false  # Set to true only when ready for real money
LIVE_TRADING_MODE="validate"  # "validate" or "live" 
MAX_DAILY_LOSS=500  # Maximum daily loss in USD
MAX_POSITION_SIZE=5  # Maximum position size as % of capital

# Risk Management
EMERGENCY_STOP_ENABLED=true
EMERGENCY_STOP_LOSS_PERCENT=10  # Emergency stop at 10% account loss
PORTFOLIO_RISK_LIMIT=80  # Maximum % of capital in positions

# Trading Hours (24/7 crypto by default)
TRADING_HOURS_ENABLED=false
WEEKEND_TRADING=true
HOLIDAY_TRADING=true

# Notification Settings
LIVE_TRADING_ALERTS_EMAIL=true
LIVE_TRADING_ALERTS_SMS=false
EMERGENCY_CONTACT_EMAIL="admin@signalcartel.com"

# Performance Monitoring  
LIVE_PERFORMANCE_SNAPSHOTS=true
PERFORMANCE_SNAPSHOT_INTERVAL=300  # seconds (5 minutes)
SYSTEM_HEALTH_CHECK_INTERVAL=60   # seconds (1 minute)

# Logging and Monitoring
LIVE_TRADING_LOG_LEVEL="info"  # debug, info, warn, error
LIVE_TRADING_LOG_FILE="/tmp/signalcartel-logs/live-trading.log"
AUDIT_TRAIL_ENABLED=true

# Development/Testing
KRAKEN_SANDBOX=true  # Use validate-only mode for testing
SIMULATE_TRADES=false  # Simulate trades without API calls
DEBUG_LIVE_TRADING=false  # Extra debug logging