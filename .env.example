# Database
DATABASE_URL="file:./dev.db"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret"

# === REAL TRADING CONFIGURATION === (LIVE MONEY)
# Kraken API for REAL TRADING ONLY - Use with caution!
KRAKEN_API_KEY="your-kraken-live-api-key"
KRAKEN_API_SECRET="your-kraken-live-api-secret"

# === PAPER TRADING CONFIGURATION === (SIMULATED MONEY)
# Alpaca Paper Trading API - PAPER TRADING ONLY
ALPACA_PAPER_API_KEY="your-alpaca-paper-api-key"
ALPACA_PAPER_API_SECRET="your-alpaca-paper-api-secret"

# Public environment variables (accessible in browser)
NEXT_PUBLIC_ALPACA_PAPER_API_KEY="your-alpaca-paper-api-key"
NEXT_PUBLIC_ALPACA_PAPER_API_SECRET="your-alpaca-paper-api-secret"

# Stripe (for subscriptions)
STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Email (for notifications)
EMAIL_SERVER_HOST="smtp.gmail.com"
EMAIL_SERVER_PORT="587"
EMAIL_SERVER_USER="your-email@gmail.com"
EMAIL_SERVER_PASSWORD="your-app-password"
EMAIL_FROM="noreply@yourapp.com"

# Paper Trading Configuration
PAPER_TRADING_AUTO_CYCLE="true"
PAPER_TRADING_MAX_ACCOUNT_AGE_HOURS="168"  # 7 days
PAPER_TRADING_MAX_TRADES="1000"
PAPER_TRADING_MAX_DRAWDOWN_PERCENT="50"
PAPER_TRADING_PRESERVE_HISTORY_DAYS="90"

# Trading Engine Settings
REAL_DATA_ONLY="true"
ENABLE_API_LOGGING="true"
ENABLE_PERFORMANCE_LOGGING="true"
REQUEST_RATE_LIMIT="1000"  # milliseconds between requests
MAX_REQUESTS_PER_MINUTE="30"